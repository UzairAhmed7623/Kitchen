<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivItem"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:elevation="8dp"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/main_course" />

                <TextView
                    android:id="@+id/tvItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ivItem"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserra_regular_bold"
                    android:text="Restaurant item name"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tvItem"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserra_regular_bold"
                    android:gravity="end"
                    android:text="Price"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvItemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvItem"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/ivItem"
                    android:fontFamily="@font/montserra_regular"
                    android:maxLines="2"
                    android:text="Description Description Description Description Description Description "
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvItemSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvItemDescription"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/ivItem"
                    android:fontFamily="@font/montserra_regular_bold"
                    android:text="Availability"
                    android:textColor="@color/myColor"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbDOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvItemSchedule"
                    android:layout_alignParentEnd="true"
                    android:layoutDirection="rtl"
                    android:text="Deal of the day"
                    android:fontFamily="@font/montserra_regular_bold"
                    android:textSize="14sp"/>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>